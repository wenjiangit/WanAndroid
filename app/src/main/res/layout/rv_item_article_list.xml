<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_date"
        android:drawableStart="@drawable/ic_access_time"
        android:drawableTint="?attr/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_text"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/primary_text"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_avatar"
        tools:text="TextView" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_image"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:background="@color/shallow_bg"-->
        <!--android:elevation="5dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="@+id/tv_title"-->
        <!--tools:ignore="ContentDescription"-->
        <!--tools:srcCompat="@mipmap/ic_launcher" />-->

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/second_text"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_avatar"
        app:layout_constraintStart_toEndOf="@id/tv_avatar"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/bg_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="1.0"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_favorite"
        android:tint="@color/selector_like_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_avatar"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="T"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chapter"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_tag"
        tools:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_category"
        app:layout_constraintStart_toEndOf="@+id/tv_category" />


</androidx.constraintlayout.widget.ConstraintLayout>